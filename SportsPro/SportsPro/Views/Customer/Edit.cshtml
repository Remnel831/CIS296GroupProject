@model CustomerViewModel



@{
	string title = ViewBag.Action;
	ViewBag.Title = title;
	Layout = "~/Views/Shared/_Layout_Validation.cshtml";
}


<h2>@ViewBag.Title Customer</h2>


<form asp-controller="Customer" asp-action="Edit" method="post">
	<input type="hidden" asp-for="Customer.CustomerID" />
	<div>
		<label asp-for="Customer.FirstName">First Name:</label>
		<input asp-for="Customer.FirstName" class="form-control @(ViewData.ModelState["FirstName"]?.Errors.Count > 0 ? "input-validation-error" : "")" />
		<span asp-validation-for="Customer.FirstName" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="Customer.LastName">Last Name:</label>
		<input asp-for="Customer.LastName" class="form-control @(ViewData.ModelState["LastName"]?.Errors.Count > 0 ? "input-validation-error" : "")" />
		<span asp-validation-for="Customer.LastName" class="text-danger"></span>

	</div>
	<div>
		<label asp-for="Customer.Address">Address:</label>
		<input asp-for="Customer.Address" class="form-control @(ViewData.ModelState["Address"]?.Errors.Count > 0 ? "input-validation-error" : "")" />
		<span asp-validation-for="Customer.Address" class="text-danger"></span>

	</div>
	<div>
		<label asp-for="Customer.City">City:</label>
		<input asp-for="Customer.City" class="form-control @(ViewData.ModelState["City"]?.Errors.Count > 0 ? "input-validation-error" : "")" />
		<span asp-validation-for="Customer.City" class="text-danger"></span>

	</div>
	<div>
		<label asp-for="Customer.State">State:</label>
		<input asp-for="Customer.State" class="form-control @(ViewData.ModelState["State"]?.Errors.Count > 0 ? "input-validation-error" : "")" />
		<span asp-validation-for="Customer.State" class="text-danger"></span>

	</div>
	<div>
		<label asp-for="Customer.PostalCode">Postal Code:</label>
		<input asp-for="Customer.PostalCode" class="form-control @(ViewData.ModelState["PostalCode"]?.Errors.Count > 0 ? "input-validation-error" : "")" />
		<span asp-validation-for="Customer.PostalCode" class="text-danger"></span>

	</div>
	<div>
		<label asp-for="Customer.CountryID">Country:</label>
		<select asp-for="Customer.CountryID" class="form-control @(ViewData.ModelState["CountryID"]?.Errors.Count > 0 ? "input-validation-error" : "")"
				asp-items="@(new SelectList(Model.Countries, "CountryID", "Name"))">
			<option value="" disabled selected>Select a Country</option>
		</select>
		<span asp-validation-for="Customer.CountryID" class="text-danger"></span>

	</div>
	<div>
		<label asp-for="Customer.Email">Email:</label>
		<input asp-for="Customer.Email" class="form-control @(ViewData.ModelState["Email"]?.Errors.Count > 0 ? "input-validation-error" : "")" />
		<span asp-validation-for="Customer.Email" class="text-danger"></span>

	</div>
	<div>
		<label asp-for="Customer.Phone">Phone:</label>
		<input asp-for="Customer.Phone" class="form-control @(ViewData.ModelState["Phone"]?.Errors.Count > 0 ? "input-validation-error" : "")" placeholder="(123)456-7890" />
		<span asp-validation-for="Customer.Phone" class="text-danger"></span>

	</div>

	<button type="submit" class="btn btn-primary">Save</button>
	<a asp-controller="Customer" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>