@model Customer



@{
	string title = ViewBag.Action;
	ViewBag.Title = title;
}


<h2>@ViewBag.Title Customer</h2>


<form asp-controller="Customer" asp-action="Edit" method="post">
	<div asp-validation-summary="All" class="text-danger"></div>
	<input type="hidden" asp-for="CustomerID" />
	<div>
		<label asp-for="FirstName">First Name:</label>
		<input asp-for="FirstName" class="form-control" />
	</div>
	<div>
		<label asp-for="LastName">Last Name:</label>
		<input asp-for="LastName" class="form-control" />
	</div>
	<div>
		<label asp-for="Address">Address:</label>
		<input asp-for="Address" class="form-control" />
	</div>
	<div>
		<label asp-for="City">City:</label>
		<input asp-for="City" class="form-control" />
	</div>
	<div>
		<label asp-for="State">State:</label>
		<input asp-for="State" class="form-control" />
	</div>
	<div>
		<label asp-for="PostalCode">Postal Code:</label>
		<input asp-for="PostalCode" class="form-control" />
	</div>
	<div>
		<label asp-for="Country">Country:</label>
		<input asp-for="Country" class="form-control">
		<option value="" disabled selected>Select a Country</option>
	</div>
	<div>
		<label asp-for="Email">Email:</label>
		<input asp-for="Email" class="form-control" />
	</div>
	<div>
		<label asp-for="Phone">Phone:</label>
		<input asp-for="Phone" class="form-control" />
	</div>

	<button type="submit" class="btn btn-primary">Save</button>
	<a asp-controller="Customer" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>