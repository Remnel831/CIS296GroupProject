@model List<Customer>

@{
	string title = ViewBag.Action;
	ViewBag.Title = title;
}




<h1>Customer Manager</h1>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>City</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var c in Model)
		{
			<tr>
				<td>@c.FullName</td>
				<td>@c.Email</td>
				<td>@c.City</td>
				<td><a class="btn btn-primary" asp-controller="Customer" asp-action="Edit" asp-route-id="@c.CustomerID">Edit</a></td>
				<td><a class="btn btn-primary" asp-controller="Customer" asp-action="Delete" asp-route-id="@c.CustomerID">Delete</a></td>
			</tr>
		}
	</tbody>
</table>
<a class="btn btn-primary" asp-controller="Customer" asp-action="Add">Add Customer</a>
