@model Incident


@{
	string title = ViewBag.Action;
	ViewBag.Title = title;
}


<h2>@ViewBag.Title Customer</h2>


<form asp-controller="Incident" asp-action="Edit" method="post">
	<div asp-validation-summary="All" class="text-danger"></div>
	<input type="hidden" asp-for="IncidentID" />
	<div>
		<label asp-for="Customer">Customer:</label>
		<input asp-for="Customer" class="form-control" />
	</div>
	<div>
		<label asp-for="Product">Product:</label>
		<input asp-for="Product" class="form-control" />
	</div>
	<div>
		<label asp-for="Title">Title:</label>
		<input asp-for="Title" class="form-control" />
	</div>
	<div>
		<label asp-for="Description">Customer:</label>
		<input asp-for="Description" class="form-control" />
	</div>
	<div>
		<label asp-for="Technician">Country:</label>
		<input asp-for="Technician" class="form-control">
		<option value="" disabled selected>Assign a Technician</option>
	</div>
	<div>
		<label asp-for="DateOpened">Date Opened:</label>
		<input asp-for="DateOpened" class="form-control" />
	</div>
	<div>
		<label asp-for="DateClosed">Date Closed:</label>
		<input asp-for="DateClosed" class="form-control" />
	</div>

	<button type="submit" class="btn btn-primary">Save</button>
	<a asp-controller="Incident" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>