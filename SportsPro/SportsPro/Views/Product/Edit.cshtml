@model Product


@{
	string title = ViewBag.Action;
	ViewBag.Title = title;	
	Layout = "~/Views/Shared/_Layout_Validation.cshtml";
}


<h2>@ViewBag.Title Product</h2>


<form asp-controller="Product" asp-action="Edit" method="post">
	<div asp-validation-summary="All" class="text-danger"></div>
	<input type="hidden" asp-for="ProductID" />
	<div>
	<label asp-for="ProductCode">Product Code</label>
	<input asp-for="ProductCode" class="form-control" />
	</div>
	<div>
		<label asp-for="Name">Name</label>
		<input asp-for="Name" class="form-control"/>
	</div>
	<div>
		<label asp-for="YearlyPrice">Yearly Price</label>
		<input asp-for="YearlyPrice" class="form-control"/>
	</div>
	<div>
		<label asp-for="ReleaseDate">Release Date</label>
		<input asp-for="ReleaseDate" class="form-control"/>
	</div>

	<button type="submit" class="btn btn-primary">Save</button>
	<a asp-controller="Product" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>