@model List<Product>




<h1>Product Manager</h1>

<table class="table table-hover w-2">
	<thead>
		<tr>
			<th>Code</th>
			<th>Name</th>
			<th>Price</th>
			<th>Release Date</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var p in Model)
		{
			<tr>
				<td>@p.ProductCode</td>
				<td>@p.Name</td>
				<td>@p.YearlyPrice</td>
				<td>@p.ReleaseDate</td>
				<td><a class="btn btn-primary" asp-controller="Product" asp-action="Edit" asp-route-id="@p.ProductID">Edit</a></td>
				<td><a class="btn btn-primary" asp-controller="Product" asp-action="Delete" asp-route-id="@p.ProductID">Delete</a></td>
			</tr>
		}
	</tbody>
</table>
	<a class="btn btn-primary" asp-controller="Product" asp-action="Add">Add Product</a>
