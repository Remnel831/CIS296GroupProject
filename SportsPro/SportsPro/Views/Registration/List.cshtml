@model SportsPro.Models.TechIncidentListViewModel

@{
    ViewBag.Title = "Technician Incidents";
    Layout = "~/Views/Shared/_Layout_Validation.cshtml";
}

<h2>Technician: @Model.Technician.Name</h2>
<h3>Assigned/Open Incidents</h3>
@if (Model.Incidents.Count() > 0)
{

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Customer</th>
                <th>Product</th>
                <th>Date Opened</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var incident in Model.Incidents)
            {
                <tr>
                    <td>@incident.Title</td>
                    <td>@incident.Customer.FullName</td>
                    <td>@incident.Product.Name</td>
                    <td>@incident.DateOpened.ToShortDateString()</td>
                    <td>
                        <a asp-controller="Incident" asp-action="Edit" asp-route-id="@incident.IncidentID" class="btn btn-sm btn-primary">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>There are no open incidents for this technician.</h3>
}

<a asp-controller="TechIncident" asp-action="Index" class="btn btn-secondary">Switch Technician</a>
