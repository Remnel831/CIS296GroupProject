@model List<Technician>




<h1>Technician Manager</h1>

<table class="table table-hover w-2">
	<thead>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Phone</th>

		</tr>
	</thead>
	<tbody>
		@foreach (var t in Model)
		{
			<tr>
				<td>@t.Name</td>
				<td>@t.Email</td>
				<td>@t.Phone</td>
				<td><a class="btn btn-primary" asp-controller="Technician" asp-action="Edit" asp-route-id="@t.TechnicianID">Edit</a></td>
				<td><a class="btn btn-primary" asp-controller="Technician" asp-action="Delete" asp-route-id="@t.TechnicianID">Delete</a></td>
			</tr>
		}
	</tbody>
</table>
<a class="btn btn-primary" asp-controller="Technician" asp-action="Add">Add Technician</a>
